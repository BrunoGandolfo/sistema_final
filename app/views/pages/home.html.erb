<div class="home-container min-h-screen bg-[#F2F2F2] flex flex-col items-center justify-center relative">
  <%# Logo y título centrados %>
  <div class="flex flex-col items-center space-y-6">
    <%# Logo %>
    <div class="w-full max-w-md" data-testid="logo-container">
      <%= image_tag "LOGO.png", 
          alt: "Conexión Consultora Logo", 
          class: "w-full h-auto",
          data: { testid: "main-logo" } %>
    </div>

    <%# Subtítulo %>
    <h2 class="text-[#0D0D0D] text-xl sm:text-2xl md:text-3xl text-center font-medium tracking-tight" data-testid="subtitle">
      SISTEMA DE GESTIÓN FINANCIERA INTEGRAL
    </h2>
  </div>

  <%# Copyright %>
  <div class="absolute bottom-4 left-4 text-[#0D0D0D] text-sm" data-testid="copyright">
    © <%= Time.current.year %> Bruno Gandolfo
  </div>
</div>
