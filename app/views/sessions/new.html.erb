<h1>Iniciar Sesión</h1>
<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, required: true %>
  </div>
  <div>
    <%= f.label :password, 'Contraseña' %>
    <%= f.password_field :password, required: true %>
  </div>
  <%= f.submit "Entrar" %>
<% end %>
