# nano app/views/sessions/new.html.erb

<h1>Iniciar Sesión</h1>
<div class="card">
  <%= form_with url: login_path, method: :post, id: 'login-form', data: { testid: 'login-form' }, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, id: 'email', required: true, autofocus: true, data: { testid: 'login-email' } %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Contraseña' %>
      <%= f.password_field :password, id: 'password', required: true, data: { testid: 'login-password' } %>
    </div>
    <div class="form-group">
      <%= f.submit 'Entrar', id: 'login-button', data: { testid: 'login-button' } %>
    </div>
  <% end %>
</div>
<p>¿No tienes cuenta?
  <%= link_to 'Regístrate', signup_path, id: 'signup-link' %>
</p>
