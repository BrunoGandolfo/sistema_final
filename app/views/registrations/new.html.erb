<h1>Registrarse</h1>

<div class="card">
  <%= form_with model: @usuario, url: signup_path, method: :post, id: 'registro-form', local: true do |f| %>
    <div class="form-group">
      <%= f.label :nombre, 'Nombre' %>
      <%= f.text_field :nombre, id: 'nombre', required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, id: 'email', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Contraseña' %>
      <%= f.password_field :password, id: 'password', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar Contraseña' %>
      <%= f.password_field :password_confirmation, id: 'password_confirmation', required: true %>
    </div>

    <div class="form-group">
      <%= f.submit 'Crear Cuenta', id: 'signup-button' %>
    </div>
  <% end %>
</div>

<p>¿Ya tienes cuenta?
  <%= link_to 'Inicia sesión', new_user_session_path, id: 'login-link' %>
</p>
